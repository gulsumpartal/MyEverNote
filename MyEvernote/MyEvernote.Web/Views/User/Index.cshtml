
@using MyEvernote.DTO.Users
@model UserDto
@{
    ViewBag.Title = "Profiliniz";
}


<div class="container">

    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>

    <div class="row">

        <div class="col-md-2">
            <img src="~/assets/Images/@Model.ProfileImagePath" class="img-circle" width="128" height="128" />
        </div>

        <div class="col-md-10">
            <h3>@Model.FullName</h3>
            <br />
            <h5><b> <label>Kullanıcı Adı : </label> </b>@Model.Username</h5>
            <h5><b><label>Email : </label> : </b>@Model.Email</h5>
            <br />
        </div>

    </div>
</div>



