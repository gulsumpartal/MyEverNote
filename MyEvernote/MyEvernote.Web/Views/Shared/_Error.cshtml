@using MyEvernote.DTO.Informing
@model  ErrorNotify
@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/CustomCss/bootstrap-modal-header-color.css" rel="stylesheet" />
<link href="~/Content/CustomCss/shop-homepage.css" rel="stylesheet" />

<section class="login-info">
    <div class="modal fade " id="messageBox" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-header-danger">
                    <h1 class="text-center">@Model.Header</h1>
                </div>
                <div class="modal-body" id="messageBoxBody">
                    <div class="text-danger">
                        <h2><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                        <hr />
                        <p class="text-justify">
                            @foreach (string msg in Model.Items)
                            {
                                @msg<br>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " +
            Model.RedirectingTimeout + ");";
    }
}

<script>

    $(function () {

        @Html.Raw(js);
    });

</script>
